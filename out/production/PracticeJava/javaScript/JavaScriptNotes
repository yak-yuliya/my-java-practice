var a = 5;
var b = "5";
var theNumbersMatch

if ( a == b ) {                     // java script will understand that first 5 is also a string and will return true
    theNumbersMatch = true;         // also try === this is "absolute scrict equality" - the content of variable a equals the contents of variable b, it will return false for 5 and "5"
} else {
    theNumbersMatch = false;
}

console.log(theNumbersMatch);

// != not equals
// !== not strict equality - if a is not identical to b
